{
  "name": "@leafo/lml",
  "version": "0.1.1",
  "description": "LML (Leaf's Music Language) parser and music theory library",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:grammar": "peggy --format es -o src/grammar.js src/grammar.pegjs",
    "build:ts": "tsc",
    "build": "npm run build:grammar && npm run build:ts",
    "clean": "rm -rf dist src/grammar.js",
    "test": "node --import tsx --test 'test/**/*.test.ts'"
  },
  "devDependencies": {
    "peggy": "^5.0.6",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "music",
    "notation",
    "parser",
    "lml",
    "music-theory"
  ],
  "license": "MIT",
  "author": "leafo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leafo/lml.git"
  },
  "bugs": {
    "url": "https://github.com/leafo/lml/issues"
  },
  "homepage": "https://github.com/leafo/lml#readme"
}
