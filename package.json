{
  "name": "@leafo/lml",
  "version": "0.2.0",
  "description": "LML (Leaf's Music Language) parser and music theory library",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:grammar": "peggy --format es --allowed-start-rules start,note -o src/grammar.js src/grammar.pegjs",
    "build:ts": "tsc",
    "build": "npm run build:grammar && npm run build:ts",
    "clean": "rm -rf dist src/grammar.js",
    "test": "node --import tsx --test 'test/**/*.test.ts'",
    "regenerate-expected": "node --import tsx scripts/regenerate-expected.ts",
    "editor": "npm run dev --prefix editor",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch"
  },
  "devDependencies": {
    "peggy": "^5.0.6",
    "tsx": "^4.21.0",
    "typedoc": "^0.27.6",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "music",
    "notation",
    "parser",
    "lml",
    "music-theory"
  ],
  "license": "MIT",
  "author": "leafo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leafo/lml.git"
  },
  "bugs": {
    "url": "https://github.com/leafo/lml/issues"
  },
  "homepage": "https://github.com/leafo/lml#readme"
}
