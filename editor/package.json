{
  "name": "lml-editor",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "esbuild src/index.tsx --bundle --outfile=dist/bundle.js --format=esm --sourcemap --target=es2020 --jsx=automatic --watch --servedir=. --alias:@leafo/lml=../src/index.ts",
    "build": "esbuild src/index.tsx --bundle --outfile=dist/bundle.js --format=esm --target=es2020 --jsx=automatic --minify --alias:@leafo/lml=../dist/index.js"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "esbuild": "^0.27.2"
  }
}
